<!--miniprogram/pages/setStudents/setStudents.wxml-->
<view class='container'>
  <form bindsubmit='comfirm' >
    <view class='input-container'>
      <label>姓名：</label>
      <input style='display:none' data-value='{{id}}' name="id" value='{{student._id}}'></input>
      <input data-value='{{name}}'  name="name" value='{{student.name}}'></input>
    </view>
    <view class='input-container'>
      <label>年龄：</label>
      <input data-value='{{age}}'  name="age" value='{{student.age}}'></input>
    </view>
    <view class='input-container'>
      <label>班级：</label>
      <input data-value='{{clazz}}' name ="clazz" value='{{student.clazz}}'></input>
    </view>
    <view class='comfirm'>
      <button form-type='submit'>保存</button>
    </view>
  </form>
</view>
